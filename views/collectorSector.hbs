<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/850b77dab2.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>hopeBD</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">hopeBD</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>
                    {{#if user}}
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout">Logout</a>
                    </li>
                    {{else}}
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Register
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/registerD">Donor</a></li>
                            <li><a class="dropdown-item" href="/registerC">Collector</a></li>
                        </ul>
                    </li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <div class="d-flex justify-content-center">
                        <img src="/collectorimg/{{collector.profile_photo}}" class="card-img-top" alt="avatar" style="width: 70%;">
                    </div>
                    <div class="card-body d-flex flex-column align-items-center">
                        <h5 class="card-title text-center">{{collector.name}}</h5>
                        <p class="card-text">This is a testing project for learning purpose.</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="row">
                    {{#each sectors}}
                    <div class="col-md-6 mb-4">
                        <div class="card" style="width: 18rem;">
                            <div class="d-flex justify-content-center">
                                {{#if this.photo}}
                                <img src="/sectorimg/{{this.photo}}" class="card-img-top" alt="avatar"
                                    style="width: 70%;">
                                {{else}}
                                <img src="/img/org.png" class="card-img-top" alt="avatar" style="width: 70%;">
                                {{/if}}
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="card-title">{{this.sector_name}}</h5>
                                    {{#if this.is_verified}}
                                    <div class="icon-container">
                                        <i class="fa-solid fa-square-check text-success fa-lg"></i>
                                    </div>
                                    {{/if}}
                                </div>
                                <p class="card-text">{{this.slogan}}</p>
                            </div>
                            
                            <div class="card-footer d-flex justify-content-between align-items-center">
                                <p class="mb-0">{{this.total_collection}} BDT</p>
                                <a href="#" class="btn btn-primary donate-btn" data-sector-id="{{this.id}}"
                                    data-collector-id="{{this.collector_id}}">
                                    Donate
                                </a>
                            </div>
                        </div>

                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

    <script>
        // Get all the "Donate" buttons
        const donateButtons = document.querySelectorAll('.donate-btn');

        // Add a click event listener to each "Donate" button
        donateButtons.forEach(button => {
            button.addEventListener('click', function (event) {
                event.preventDefault();

                // Get the sector ID and collector ID from the data attributes
                const sectorId = this.getAttribute('data-sector-id');
                const collectorId = this.getAttribute('data-collector-id');

                // Build the URL with query parameters
                const url = `/utils/donateSector?sectorId=${sectorId}&collectorId=${collectorId}`;

                // Redirect to the backend URL with the query parameters
                window.location.href = url;
            });
        });
    </script>

</body>

</html>