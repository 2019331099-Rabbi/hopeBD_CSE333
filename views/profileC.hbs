<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/850b77dab2.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>hopeBD</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">hopeBD</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    {{!-- <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li> --}}
                    {{#if user}}
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout">Logout</a>
                    </li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <div class="d-flex justify-content-center">
                        {{#if user.profile_photo}}
                            <img src="/collectorimg/{{user.profile_photo}}" class="card-img-top" alt="avatar" style="width: 70%;">
                        {{else}}
                            <img src="/img/org.png" class="card-img-top" alt="avatar" style="width: 70%;">
                        {{/if}}
                    </div>
                    <div class="card-body d-flex flex-column align-items-center">
                        <h5 class="card-title text-center">{{user.name}}</h5>
                        <p class="card-text">{{user.slogan}}</p>
                    </div>
                    <form action="/utils/updateProfilePhoto" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="profilePhoto" class="form-label">Profile Photo</label>
                            <input type="file" name="profilePhoto" id="profilePhoto" accept="image/*"
                                class="form-control" required>
                        </div>

                        <input type="hidden" name="collectorId" value="{{user.id}}">
                        <button type="submit" class="btn btn-primary text-center w-100">Update</button>
                    </form>
                </div>
            </div>
            <div class="col-md-8">
                <div class="row">
                    {{#each sectors}}
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <img src="/sectorimg/{{this.photo}}" class="card-img-top" alt="Sector Image">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="card-title mb-0">
                                        {{this.sector_name}}
                                    </h5>
                                    {{#if this.is_verified}}
                                    <div class="icon-container">
                                        <i class="fa-solid fa-square-check text-success fa-lg"></i>
                                    </div>
                                    {{/if}}
                                </div>
                                <p class="card-text overflow-hidden">{{this.slogan}}</p>
                            </div>
                            <div class="card-footer d-flex justify-content-center">
                                <a href="#" class="btn btn-primary details-btn" data-sector-id="{{this.id}}"
                                    data-collector-id="{{../user.id}}">Details</a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-body d-flex justify-content-center align-items-center">
                                <form action="/utils/newSector" method="POST" enctype="multipart/form-data"
                                    class="card-title">
                                    <input type="hidden" name="collectorId" value="{{user.id}}">
                                    <button type="submit" class="btn btn-primary">Add New Sector</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        // Get all the "Details" buttons
        const detailsButtons = document.querySelectorAll('.details-btn');

        // Add a click event listener to each "Details" button
        detailsButtons.forEach(button => {
            button.addEventListener('click', function (event) {
                event.preventDefault();

                // Get the sector ID and collector ID from the data attributes
                const sectorId = this.getAttribute('data-sector-id');
                const collectorId = this.getAttribute('data-collector-id');

                // Build the URL with query parameters
                const url = `/utils/sectorDetails?sectorId=${sectorId}&collectorId=${collectorId}`;

                // Redirect to the backend URL with the query parameters
                window.location.href = url;
            });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>