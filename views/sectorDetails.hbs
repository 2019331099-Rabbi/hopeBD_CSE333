    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/sectorDetailsCollector.css">
    <title>hopeBD</title>
</head>

<body>

    <nav class="nav-bar-main">
        <div class="ecommerce-logo">hopeBD</div>
        <div class="option-bar">


            {{#if user}}
            <div class="button-navbar">
                <a class="nav-link-a" href="/profile">Profile</a>
            </div>
            <div class="button-navbar sign-in-btn">
                <a class="nav-link-a" href="/auth/logout">Logout</a>
            </div>
            {{/if}}

        </div>
    </nav>
    <div class="main-container">

        <div class="container">
            <img src="/sectorimg/{{sector.photo}}" class="sector-image" alt="Sector Image">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="sector-name">
                        {{sector.sector_name}}
                    </div>
                    {{#if sector.is_verified}}
                    <div class="verified-btn">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    {{/if}}
                </div>
                <p class="card-text overflow-hidden">{{sector.slogan}}</p>


                <div class="delete-button-container">
                    <div class="progress-bar">

                        <p class="mb-0">{{sector.total_collection}} BDT</p>
                        <div role="progressbar" aria-valuenow="67" aria-valuemin="0" aria-valuemax="100"
                            style="--value: 56; width: 50px;">
                        </div>
                    </div>
                    <form action="/utils/deleteSector" method="POST" enctype="multipart/form-data">
                        <input type="hidden" name="sectorId" value="{{sector.id}}">
                        <input type="hidden" name="collectorId" value="{{user.id}}">
                        <button type="submit" class="delete-button ">Delete</button>
                    </form>
                </div>
            </div>

        </div>
        <div class="table-container">
            {{#each paymentResults}}
            <div class="table-data">

                <div class="name">
                    Donor Name: {{this.name}}
                </div>
                <div class="amount">
                    Amount: {{this.amount}}
                </div>
                <div class="tran-id">
                    Transaction: {{this.transaction_id}}
                </div>
            </div>
            {{/each}}
            
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>